Calc:
    orientation: 'vertical'
    padding: "10dp"
    canvas:
        Color:
            rgba: root.canvas_color
        Rectangle:
            size: self.width, self.height

    # MDTopAppBar:
    #     title: "Basic Calculator"
    #     size_hint: 1, .05

    MDSwitch:
        id: switch
        widget_style: "ios"
        track_color_active: "black"
        track_color_inactive: "white"
        thumb_color_active: "white"
        thumb_color_inactive: "black"
        on_active: root.colorSwitch(self)
        size: (dp(43), dp(20))

    Label:
        size_hint: 1, .02

    MDTextField:
        id: lcd1
        input_filter: "float"
        multiline: False
        font_size: 35
        size_hint: 1, .2
        base_direction: "rtl"
        # on_text_validate: root.equal_to()
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: root.button_color
            # Line:
            #     rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], 13)
            #     width: 1

    Label:
        id: lcd2
        text: ""
        font_size: dp(20)
        color: 1, 1, 1, .5
        text_size: self.width - 40, self.height
        halign: "right"
        size_hint: 1, .12
    Label:
        size_hint: 1, .02

    StackLayout:
        orientation: "lr-tb"
        padding: "10dp"
        spacing: "20dp"
        Button:
            id: c_btn
            text: "C"
            size_hint: .25, .15
            on_press: root.clear_screen()
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, .8, .5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
        Button:
            id: bck_btn
            text: "<<"
            size_hint: .25, .15
            on_press: root.backspace()
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, .8, .5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
        Button:
            text: "CE"
            size_hint: .25, .15
            on_press: root.clear_screen()
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, .8, .5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
        Button:
            text: "/"
            size_hint: .25, .15
            on_press: root.add_operator(self)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, .8, .5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    pos: self.pos
        Button:
            id: num7
            text: "7"
            size_hint: .25, .15
